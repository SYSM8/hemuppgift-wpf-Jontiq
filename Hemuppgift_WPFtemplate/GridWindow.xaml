<Window x:Class="Hemuppgift_WPFtemplate.GridWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GridWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="0">
            <TextBlock Text="Row " VerticalAlignment="Center"/>
            <TextBox x:Name="RowInput" Width="50"/>
            <TextBlock Text="Column " VerticalAlignment="Center"/>
            <TextBox x:Name="ColumnInput" Width="50"/>
            <Button x:Name="RowColumnApply" Content="Apply" Width="60" Click="RowColumnApply_Click"/>
        </StackPanel>

        <!-- the grid!!! -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border x:Name="GreenBox" Background="LightGreen" BorderBrush="Black" BorderThickness="1" Grid.Column="0" Grid.Row="0">
                <TextBlock x:Name="BoxText" Text="Row 0, Column 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>
